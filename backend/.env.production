# MrkTahsilatWeb Production Environment Variables

# Database Configuration
DB_USER=sa
DB_PASSWORD=YourStrongPassword123!
DB_SERVER=localhost
DB_PORT=1433
DB_DATABASE=MrkTahsilatDB

# Server Configuration
PORT=5000
NODE_ENV=production

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
SESSION_SECRET=your-super-secure-session-secret-here

# CORS Configuration
CORS_ORIGIN=https://mrkotomotiv.com,https://www.mrkotomotiv.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/mrktahsilatweb/app.log

# Email Configuration (if needed)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# File Upload Configuration
UPLOAD_DIR=/var/www/mrktahsilatweb/uploads
MAX_FILE_SIZE=10485760

# Cache Configuration
REDIS_URL=redis://localhost:6379

# Monitoring
HEALTH_CHECK_ENDPOINT=/api/health
